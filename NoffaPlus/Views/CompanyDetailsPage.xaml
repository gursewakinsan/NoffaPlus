<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="NoffaPlus.Views.CompanyDetailsPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:d="http://xamarin.com/schemas/2014/forms/design"
	xmlns:fontawesome="clr-namespace:NoffaPlus.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Notification - (To do)"
	ios:Page.UseSafeArea="True"
	BackgroundColor="White"
	mc:Ignorable="d">
	<ContentPage.Content>
		<Grid ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="60" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<ScrollView
				Grid.Row="0"
				Grid.ColumnSpan="2"
				VerticalScrollBarVisibility="Never">
				<Grid
					Padding="20"
					ColumnSpacing="0"
					RowSpacing="10"
					VerticalOptions="CenterAndExpand">
					<Grid.RowDefinitions>
						<RowDefinition Height="auto" />
						<RowDefinition Height="1" />
						<RowDefinition Height="80" />
						<RowDefinition Height="80" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
						<ColumnDefinition />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>
					<Label
						Grid.Row="0"
						Grid.ColumnSpan="3"
						Margin="0,0,0,50"
						FontAttributes="Bold"
						FontSize="25"
						HorizontalOptions="CenterAndExpand"
						Text="{Binding CompanyDetail.CompanyName}"
						TextColor="Black"
						VerticalOptions="StartAndExpand" />

					<BoxView
						Grid.Row="1"
						Grid.ColumnSpan="3"
						Margin="10,0,10,0"
						BackgroundColor="#6F7FAF"
						IsVisible="False"
						Opacity="0.2" />

					<StackLayout
						Grid.Row="2"
						Grid.Column="0"
						Padding="10"
						HorizontalOptions="CenterAndExpand"
						Spacing="0"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							HorizontalTextAlignment="Center"
							Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.News}"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
						<Label
							FontSize="14"
							HorizontalTextAlignment="Center"
							Text="News"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<StackLayout
						Grid.Row="2"
						Grid.Column="1"
						Padding="10"
						HorizontalOptions="CenterAndExpand"
						Spacing="0"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							HorizontalTextAlignment="Center"
							Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Message}"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
						<Label
							FontSize="14"
							HorizontalTextAlignment="Center"
							Text="Message"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<StackLayout
						Grid.Row="2"
						Grid.Column="2"
						Padding="10"
						HorizontalOptions="CenterAndExpand"
						Spacing="0"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							HorizontalTextAlignment="Center"
							Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Employee}"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
						<Label
							FontSize="14"
							HorizontalTextAlignment="Center"
							Text="Employees"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<StackLayout
						Grid.Row="3"
						Grid.Column="0"
						Padding="10"
						HorizontalOptions="CenterAndExpand"
						Spacing="0"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							HorizontalTextAlignment="Center"
							Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Card}"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
						<Label
							FontSize="14"
							HorizontalTextAlignment="Center"
							Text="Busniees card"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<StackLayout
						Grid.Row="3"
						Grid.Column="1"
						Padding="10"
						HorizontalOptions="CenterAndExpand"
						Spacing="0"
						VerticalOptions="CenterAndExpand">
						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							HorizontalTextAlignment="Center"
							Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Apps}"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
						<Label
							FontSize="14"
							HorizontalTextAlignment="Center"
							Text="Apps"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
					</StackLayout>

					<StackLayout
						Grid.Row="3"
						Grid.Column="2"
						Padding="10"
						HorizontalOptions="CenterAndExpand"
						Spacing="0"
						VerticalOptions="CenterAndExpand">
						<StackLayout.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding AdminCommand}" />
						</StackLayout.GestureRecognizers>
						<Label
							FontFamily="{StaticResource MaterialFontFamily}"
							FontSize="25"
							HorizontalTextAlignment="Center"
							Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.Admin}"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
						<Label
							FontSize="14"
							HorizontalTextAlignment="Center"
							Text="Admins"
							TextColor="#6F7FAF"
							VerticalTextAlignment="Center" />
					</StackLayout>
				</Grid>
			</ScrollView>

			<Label
				Grid.Row="1"
				Grid.Column="0"
				Padding="20,0,0,0"
				BackgroundColor="#F2F2F2"
				FontSize="16"
				HorizontalTextAlignment="Start"
				Text="My profile"
				TextColor="Black"
				VerticalTextAlignment="Center" />

			<Label
				Grid.Row="1"
				Grid.Column="1"
				Padding="0,0,20,0"
				BackgroundColor="#F2F2F2"
				FontSize="16"
				HorizontalTextAlignment="End"
				Text="Alarm accident"
				TextColor="Black"
				VerticalTextAlignment="Center" />
		</Grid>
	</ContentPage.Content>
</ContentPage>