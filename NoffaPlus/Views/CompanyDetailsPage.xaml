				VerticalTextAlignment="Center" />

			<Label
				Grid.Row="1"
				Grid.Column="1"
				Padding="0,0,20,0"
				BackgroundColor="#F2F2F2"
				FontSize="16"
				HorizontalTextAlignment="End"
				Text="Alarm accident"
				TextColor="Black"
				VerticalTextAlignment="Center">
