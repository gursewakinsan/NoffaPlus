						<ImageButton
							Grid.Row="0"
							Padding="20"
							BackgroundColor="#FF5560"
							CornerRadius="40"
							HeightRequest="80"
							WidthRequest="80">
							<ImageButton.Source>
								<FontImageSource
									FontFamily="{StaticResource MaterialFontFamily}"
									Glyph="{x:Static fontawesome:NoffaPlusAppFlatIcons.Apps}"
									Size="50"
									Color="White" />
							</ImageButton.Source>
						</ImageButton>

						<Label
							Grid.Row="1"
							FontSize="16"
							HorizontalTextAlignment="Center"
							Text="Appstore"
							TextColor="#C9CFD7"
							VerticalTextAlignment="Center" />
					</Grid>

					<Grid
						RowSpacing="0"
						VerticalOptions="StartAndExpand"
						WidthRequest="70">
						<Grid.RowDefinitions>
							<RowDefinition Height="60" />
							<RowDefinition Height="20" />
						</Grid.RowDefinitions>
						<ImageButton
							Grid.Row="0"
							Padding="15"
							BackgroundColor="White"
							Command="{Binding AdminCommand}"
							CornerRadius="30"
							HeightRequest="60"
							HorizontalOptions="CenterAndExpand"
							VerticalOptions="CenterAndExpand"
							WidthRequest="60">
							<ImageButton.Source>
								<FontImageSource
									FontFamily="{StaticResource MaterialFontFamily}"
									Glyph="{x:Static fontawesome:NoffaPlusAppFlatIcons.Admin}"
									Size="50"
									Color="#C9CFD7" />
							</ImageButton.Source>
