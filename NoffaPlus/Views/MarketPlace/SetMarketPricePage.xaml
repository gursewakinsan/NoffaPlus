<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NoffaPlus.Views.MarketPlace.SetMarketPricePage"
    xmlns:fontawesome="clr-namespace:NoffaPlus.Helper"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" xmlns:controls="clr-namespace:NoffaPlus.Controls"
    ios:Page.UseSafeArea="True"
    BackgroundColor="#1B1D24"
    NavigationPage.HasNavigationBar="False">
    <Grid Margin="0,22,0,0" RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <Button
	        Grid.Row="0"
	        CornerRadius="8"
	        BorderWidth="1"
	        Opacity="0.2"
	        Grid.Column="1"
	        Command="{Binding CloseCommand}"
	        BackgroundColor="Transparent"
	        BorderColor="White"/>

        <Label
	        Grid.Row="0"
	        Grid.Column="1"
	        FontFamily="{StaticResource MaterialFontFamily}"
	        FontSize="25"
	        HorizontalTextAlignment="Center"
	        Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronLeft}"
	        TextColor="White"
	        VerticalTextAlignment="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseCommand}" />
            </Label.GestureRecognizers>
        </Label>

        <ScrollView
	        Grid.Row="2"
	        Grid.ColumnSpan="5"
	        VerticalScrollBarVisibility="Never">
            <Grid RowSpacing="0" ColumnSpacing="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="46"/>
                    <RowDefinition Height="7"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                </Grid.ColumnDefinitions>
                <Label
				    Grid.Row="0"
                    Grid.Column="1"
				    FontAttributes="Bold"
				    FontFamily="PoppinsSemiBoldFontFamily"
				    FontSize="33"
				    HorizontalTextAlignment="Start"
				    Text="Pricing"
				    TextColor="White"
				    VerticalTextAlignment="Center" />

                <Label
				    Grid.Row="2"
                    Grid.Column="1"
				    FontFamily="PoppinsRegularFontFamily"
				    FontSize="25"
				    HorizontalTextAlignment="Start"
				    Opacity="0.42"
				    Text="Set a price"
				    TextColor="White"
				    VerticalTextAlignment="Center" />

                <Label
				    Grid.Row="4"
                    Grid.Column="1"
				    FontFamily="PoppinsRegularFontFamily"
				    FontSize="13"
				    HorizontalTextAlignment="Start"
				    Opacity="0.42"
				    Text="Title"
				    TextColor="White"
				    VerticalTextAlignment="Center" />

                <controls:CustomEntry
                    Grid.Row="5"
                    FontSize="18"
                    Grid.Column="1"
                    TextColor="White"
                    Placeholder="Title"
                    PlaceholderColor="Gray"
                    BackgroundColor="Transparent"
                    Text="{Binding Title}"
                    FontFamily="PoppinsRegularFontFamily"/>

                <BoxView
				    Grid.Row="6"
				    Opacity="0.10"
                    Grid.Column="1"
				    BackgroundColor="White"/>

                <Label
                    Grid.Row="8"
                    Grid.Column="1"
                    FontFamily="PoppinsRegularFontFamily"
                    FontSize="13"
                    HorizontalTextAlignment="Start"
                    Opacity="0.42"
                    Text="Price"
                    TextColor="White"
                    VerticalTextAlignment="Center" />

                <controls:CustomEntry
                    Grid.Row="9"
                    FontSize="18"
                    Grid.Column="1"
                    TextColor="White"
                    Placeholder="Price"
                    PlaceholderColor="Gray"
                    Text="{Binding Price}"
                    BackgroundColor="Transparent"
                    FontFamily="PoppinsRegularFontFamily"/>

                <BoxView
                    Grid.Row="10"
                    Opacity="0.10"
                    Grid.Column="1"
                    BackgroundColor="White"/>

                <Label
                     Grid.Row="12"
                     Grid.Column="1"
                     FontFamily="PoppinsRegularFontFamily"
                     FontSize="13"
                     HorizontalTextAlignment="Start"
                     Opacity="0.42"
                     Text="Descriptions"
                     TextColor="White"
                     VerticalTextAlignment="Center" />

                <Editor
                     Grid.Row="13"
                     FontSize="18"
                     Grid.Column="1"
                     TextColor="White"
                     Placeholder="Descriptions"
                     PlaceholderColor="Gray"
                    Text="{Binding Descriptions}"
                     BackgroundColor="Transparent"
                     FontFamily="PoppinsRegularFontFamily"/>

                <BoxView
                     Grid.Row="14"
                     Opacity="0.10"
                     Grid.Column="1"
                     BackgroundColor="White"/>

                <StackLayout
                    Grid.Row="16"
                    Spacing="0"
                    Padding="24"
                    Grid.ColumnSpan="3"
                    BackgroundColor="#242A37">
                    <Grid RowSpacing="0" ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label
                             Grid.Row="0"
                            Grid.ColumnSpan="3"
                             FontFamily="PoppinsRegularFontFamily"
                             FontSize="13"
                             HorizontalTextAlignment="Start"
                             Opacity="0.70"
                             Text="Prep time to next event"
                             TextColor="White"
                             VerticalTextAlignment="Start" />

                        <BoxView
                             Grid.Row="1"
                             Opacity="0.10"
                            Grid.ColumnSpan="3"
                             BackgroundColor="White"/>

                        <Grid
                            Padding="10,10,10,0"
                            Grid.Row="3"
                            Grid.ColumnSpan="3"
                            ColumnSpacing="5"
                            RowSpacing="0"
                            BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                                 Grid.Row="0"
                                 Grid.ColumnSpan="2"
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="13"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Minimum time"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Grid.Row="1"
                                Grid.Column="0"
					            Title="Select"
					            FontSize="16"
					            TextColor="White"
					            TitleColor="#797A7D"
                                FontFamily="PoppinsRegularFontFamily"
                                ItemDisplayBinding="{Binding MinimumTime}"
                                ItemsSource="{Binding MinimumTime}"
                                SelectedItem="{Binding SelectedMinimumTime}"/>

                            <Label
                                FontSize="20"
                                Grid.Column="1"
                                TextColor="#EF793F"
                                Grid.RowSpan="2"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="End"
                                FontFamily="{StaticResource MaterialFontFamily}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <Grid
                            Padding="10,10,10,0"
                            Grid.Row="5"
                            Grid.ColumnSpan="3"
                            ColumnSpacing="5"
                            RowSpacing="0"
                            BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                                 Grid.Row="0"
                                 Grid.ColumnSpan="2"
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="13"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Preparation time"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Grid.Row="1"
                                Grid.Column="0"
                                Title="Select"
                                FontSize="16"
                                TextColor="White"
                                TitleColor="#797A7D"
                                FontFamily="PoppinsRegularFontFamily"
                                ItemDisplayBinding="{Binding PreparationTime}"
                                ItemsSource="{Binding PreparationTime}"
                                SelectedItem="{Binding SelectedPreparationTime}"/>

                            <Label
                                FontSize="20"
                                Grid.Column="1"
                                TextColor="#EF793F"
                                Grid.RowSpan="2"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="End"
                                FontFamily="{StaticResource MaterialFontFamily}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <Grid
                            Padding="10,10,10,0"
                            Grid.Row="7"
                            Grid.ColumnSpan="3"
                            ColumnSpacing="5"
                            RowSpacing="0"
                            BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                                 Grid.Row="0"
                                 Grid.ColumnSpan="2"
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="13"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Post production time"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Grid.Row="1"
                                Grid.Column="0"
                                Title="Select"
                                FontSize="16"
                                TextColor="White"
                                TitleColor="#797A7D"
                                FontFamily="PoppinsRegularFontFamily"
                                ItemDisplayBinding="{Binding PostProductionTime}"
                                ItemsSource="{Binding PostProductionTime}"
                                SelectedItem="{Binding SelectedPostProductionTime}"/>

                            <Label
                                FontSize="20"
                                Grid.Column="1"
                                Grid.RowSpan="2"
                                TextColor="#EF793F"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="End"
                                FontFamily="{StaticResource MaterialFontFamily}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <StackLayout 
                            Grid.Row="9"
                            Grid.ColumnSpan="3"
                            Orientation="Horizontal">
                            <Label
                                FontFamily="PoppinsRegularFontFamily"
                                FontSize="16"
                                HorizontalTextAlignment="Start"
                                Opacity="0.70"
                                Text="Is this a bookable service?"
                                TextColor="White"
                                VerticalTextAlignment="Center" />            

                            <Label
	                            Grid.Row="10"
	                            Grid.Column="1"
	                            FontSize="44"
	                            HorizontalTextAlignment="End"
                                HorizontalOptions="EndAndExpand"
                                FontFamily="{StaticResource MaterialFontFamily}"
	                            Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
	                            TextColor="#89C99A"
                                IsVisible="{Binding IsBookableService}"
	                            VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsBookableServiceCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
	                            Grid.Row="10"
	                            Grid.Column="1"
	                            FontSize="44"
	                            HorizontalTextAlignment="End"
                                HorizontalOptions="EndAndExpand"
                                FontFamily="{StaticResource MaterialFontFamily}"
	                            Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
	                            TextColor="#EF793F"
	                            VerticalTextAlignment="Center"
                                IsVisible="{Binding IsBookableService, Converter={StaticResource InverseBoolConverter}}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsBookableServiceCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>

                        <BoxView
                            Grid.Row="10"
                            Opacity="0.10"
                            Grid.ColumnSpan="3"
                            BackgroundColor="White"/>

                        <Grid
                            IsVisible="{Binding IsBookingTypeControl}"
                            Padding="10,10,10,0"
                            Grid.Row="12"
                            ColumnSpacing="5"
                            RowSpacing="0"
                            Grid.Column="0"
                            BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                                 Grid.Row="0"
                                 Grid.ColumnSpan="2"
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="13"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Booking type"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Grid.Row="1"
                                Grid.Column="0"
                                Title="Select"
                                FontSize="16"
                                TextColor="White"
                                TitleColor="#797A7D"
                                FontFamily="PoppinsRegularFontFamily"
                                ItemDisplayBinding="{Binding BookingType}"
                                ItemsSource="{Binding BookingTypeModel}"
                                SelectedItem="{Binding SelectedBookingTypeModel}"/>

                            <Label
                                FontSize="20"
                                Grid.Column="1"
                                TextColor="#EF793F"
                                Grid.RowSpan="2"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="End"
                                FontFamily="{StaticResource MaterialFontFamily}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <Grid
                            Padding="10,10,10,0"
                            Grid.Row="12"
                            ColumnSpacing="5"
                            RowSpacing="0"
                            Grid.Column="2"
                            IsVisible="{Binding IsSharedTypeControl}"
                            BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                                 Grid.Row="0"
                                 Grid.ColumnSpan="2"
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="13"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Shared type"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                Grid.Row="1"
                                Grid.Column="0"
                                Title="Select"
                                FontSize="16"
                                TextColor="White"
                                TitleColor="#797A7D"
                                FontFamily="PoppinsRegularFontFamily"
                                ItemDisplayBinding="{Binding SharedType}"
                                ItemsSource="{Binding SharedTypeModel}"
                                SelectedItem="{Binding SelectedSharedTypeModel}"/>

                            <Label
                                FontSize="20"
                                Grid.Column="1"
                                TextColor="#EF793F"
                                Grid.RowSpan="2"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="End"
                                FontFamily="{StaticResource MaterialFontFamily}"
                                Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <StackLayout 
                             Grid.Row="13"
                             Grid.ColumnSpan="3"
                            Margin="0,10,0,10"
                             Orientation="Horizontal"
                            IsVisible="{Binding IsRecurringEventControl}">
                            <Label
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="16"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Is this a recurring event?"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <Label
                                 Grid.Row="10"
                                 Grid.Column="1"
                                 FontSize="44"
                                 HorizontalTextAlignment="End"
                                 HorizontalOptions="EndAndExpand"
                                 FontFamily="{StaticResource MaterialFontFamily}"
                                 Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
                                 TextColor="#89C99A"
                                 IsVisible="{Binding IsRecurringEvent}"
                                 VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsRecurringEventCommand}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                 Grid.Row="10"
                                 Grid.Column="1"
                                 FontSize="44"
                                 HorizontalTextAlignment="End"
                                 HorizontalOptions="EndAndExpand"
                                 FontFamily="{StaticResource MaterialFontFamily}"
                                 Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
                                 TextColor="#EF793F"
                                 VerticalTextAlignment="Center"
                                 IsVisible="{Binding IsRecurringEvent, Converter={StaticResource InverseBoolConverter}}">
                                 <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IsRecurringEventCommand}"/>
                                 </Label.GestureRecognizers>
                             </Label>
                        </StackLayout>

                        <BoxView
                            Grid.Row="14"
                            Opacity="0.10"
                            Grid.ColumnSpan="3"
                            HeightRequest="1"
                            BackgroundColor="White"
                            IsVisible="{Binding IsRecurringEventControl}"/>

                        <Grid
                             Margin="0,10,0,10"
                             Padding="10,10,10,0"
                             Grid.Row="15"
                             ColumnSpacing="5"
                             RowSpacing="0"
                             Grid.ColumnSpan="3"
                             IsVisible="{Binding IsEventDateControl}"
                             BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                              Grid.Row="0"
                              Grid.ColumnSpan="2"
                              FontFamily="PoppinsRegularFontFamily"
                              FontSize="13"
                              HorizontalTextAlignment="Start"
                              Opacity="0.70"
                              Text="Event date"
                              TextColor="White"
                              VerticalTextAlignment="Center" />

                            <controls:CustomDatePicker
                                 Grid.Row="1"
                                 Grid.Column="0"
                                 FontSize="16"
                                 TextColor="White"
                                Format="yyyy-MM-dd"
                                Placeholder="Event date"
                                 FontFamily="PoppinsRegularFontFamily"/>

                            <Label
                                 FontSize="20"
                                 Grid.Column="1"
                                 TextColor="#EF793F"
                                 Grid.RowSpan="2"
                                 VerticalTextAlignment="Center"
                                 HorizontalTextAlignment="End"
                                 FontFamily="{StaticResource MaterialFontFamily}"
                                 Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <Grid
                          Margin="0,10,0,10"
                          Padding="10,10,10,0"
                          Grid.Row="16"
                          ColumnSpacing="5"
                          RowSpacing="0"
                          Grid.ColumnSpan="3"
                          IsVisible="{Binding IsEventStartTimeControl}"
                          BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                               Grid.Row="0"
                               Grid.ColumnSpan="2"
                               FontFamily="PoppinsRegularFontFamily"
                               FontSize="13"
                               HorizontalTextAlignment="Start"
                               Opacity="0.70"
                               Text="Time"
                               TextColor="White"
                               VerticalTextAlignment="Center" />

                            <controls:CustomPicker
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  Title="Select"
                                  FontSize="16"
                                  TextColor="White"
                                  TitleColor="#797A7D"
                                  FontFamily="PoppinsRegularFontFamily">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Yes</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                                <Picker.SelectedIndex>0</Picker.SelectedIndex>
                            </controls:CustomPicker>

                            <Label
                                  FontSize="20"
                                  Grid.Column="1"
                                  TextColor="#EF793F"
                                  Grid.RowSpan="2"
                                  VerticalTextAlignment="Center"
                                  HorizontalTextAlignment="End"
                                  FontFamily="{StaticResource MaterialFontFamily}"
                                  Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronDown}"/>
                        </Grid>

                        <StackLayout 
                             Grid.Row="15"
                             Grid.ColumnSpan="3"
                            Margin="50,10,0,10"
                             Orientation="Horizontal"
                            IsVisible="{Binding IsMondayControl}">
                            <Label
                                 FontFamily="PoppinsRegularFontFamily"
                                 FontSize="16"
                                 HorizontalTextAlignment="Start"
                                 Opacity="0.70"
                                 Text="Monday"
                                 TextColor="White"
                                 VerticalTextAlignment="Center" />

                            <Label
                                 Grid.Row="10"
                                 Grid.Column="1"
                                 FontSize="44"
                                 HorizontalTextAlignment="End"
                                 HorizontalOptions="EndAndExpand"
                                 FontFamily="{StaticResource MaterialFontFamily}"
                                 Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitch}"
                                 TextColor="#89C99A"
                                 IsVisible="{Binding IsMonday}"
                                 VerticalTextAlignment="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding WeekdaysCommand}" CommandParameter="Monday" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                 Grid.Row="10"
                                 Grid.Column="1"
                                 FontSize="44"
                                 HorizontalTextAlignment="End"
                                 HorizontalOptions="EndAndExpand"
                                 FontFamily="{StaticResource MaterialFontFamily}"
                                 Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ToggleSwitchOff}"
                                 TextColor="#EF793F"
                                 VerticalTextAlignment="Center"
                                 IsVisible="{Binding IsMonday, Converter={StaticResource InverseBoolConverter}}">
                                 <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding WeekdaysCommand}" CommandParameter="Monday" />
                                 </Label.GestureRecognizers>
                             </Label>
                        </StackLayout>

                        <BoxView
                            Grid.Row="16"
                            Opacity="0.10"
                            Grid.ColumnSpan="3"
                            HeightRequest="1"
                            Margin="50,0,0,0"
                            BackgroundColor="White"
                            IsVisible="{Binding IsMondayControl}"/>

                        <Grid
                            Margin="50,10,0,10"
                            Padding="10,10,10,0"
                            Grid.Row="17"
                            ColumnSpacing="5"
                            RowSpacing="0"
                            Grid.ColumnSpan="3"
                            IsVisible="{Binding IsMonday}"
                            BackgroundColor="#1B1D24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label
                                 Grid.Row="0"
                                 Grid.ColumnSpan="2"
