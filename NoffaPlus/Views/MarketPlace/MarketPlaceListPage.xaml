<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NoffaPlus.Views.MarketPlace.MarketPlaceListPage"
    xmlns:fontawesome="clr-namespace:NoffaPlus.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#1B1D24"
	NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid Margin="0,22,0,0" RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
				<RowDefinition Height="40" />
				<RowDefinition Height="50"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="24" />
				<ColumnDefinition Width="40" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="24" />
				<ColumnDefinition Width="40" />
			</Grid.ColumnDefinitions>
			<Button
				Grid.Row="0"
				CornerRadius="8"
				BorderWidth="1"
				Opacity="0.2"
				Grid.Column="1"
				Command="{Binding CloseCommand}"
				BackgroundColor="Transparent"
				BorderColor="White"/>

			<Label
				Grid.Row="0"
				Grid.Column="1"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Center"
				Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding CloseCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<ScrollView
				Grid.Row="2"
				Grid.Column="1"
				Grid.ColumnSpan="3"
				VerticalScrollBarVisibility="Never">
				<Grid RowSpacing="0" ColumnSpacing="0">
					<Grid.RowDefinitions>
						<RowDefinition Height="33"/>
						<RowDefinition Height="13"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="60"/>
						<RowDefinition Height="20"/>
						<RowDefinition Height="15"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="20"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>
					<Label
						Grid.Row="0"
						FontAttributes="Bold"
						FontFamily="PoppinsSemiBoldFontFamily"
						FontSize="33"
						HorizontalTextAlignment="Start"
						Text="Channels"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="2"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="25"
						HorizontalTextAlignment="Start"
						Opacity="0.42"
						Text="Selected marketplaces"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						Grid.Row="4"
						FontFamily="PoppinsRegularFontFamily"
						FontSize="18"
						HorizontalTextAlignment="Start"
						Opacity="0.70"
						Text="List"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<BoxView
						Grid.Row="6"
						Opacity="0.10"
						BackgroundColor="White"/>

					<StackLayout 
						Spacing="0" 
						Grid.Row="8"
						VerticalOptions="StartAndExpand"
						BindableLayout.ItemsSource="{Binding CompanyMarketplaceList}">
						<BindableLayout.ItemTemplate>
							 <DataTemplate>
								<Frame
									Padding="20,0,25,0"
									Margin="0,0,0,15"
									HeightRequest="80"
									CornerRadius="4"
									BackgroundColor="#242A37"
									HasShadow="False"
									IsClippedToBounds="True">
									<Frame.GestureRecognizers>
										<TapGestureRecognizer Tapped="OnFrameTapped"/>
									</Frame.GestureRecognizers>
									<Grid>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="*"/>
											<ColumnDefinition Width="20"/>	
										</Grid.ColumnDefinitions>
										<Grid.GestureRecognizers>
											<TapGestureRecognizer Tapped="OnGridTapped"/>
										</Grid.GestureRecognizers>
										<Label
											Grid.Row="0"
											Grid.Column="0"
											FontFamily="PoppinsRegularFontFamily"
											FontSize="15"
											HorizontalTextAlignment="Start"
											Text="{Binding MarketPlaceName}"
											TextColor="White"
											MaxLines="1"
											LineBreakMode="TailTruncation"
											VerticalTextAlignment="Center">
											<Label.GestureRecognizers>
												<TapGestureRecognizer Tapped="OnLabelTapped"/>
											</Label.GestureRecognizers>
										</Label>

										<Label
											Grid.Row="0"
											Grid.Column="1"
											FontFamily="{StaticResource MaterialFontFamily}"
											FontSize="25"
											HorizontalTextAlignment="End"
											Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronRight}"
											TextColor="#EF793F"
											VerticalTextAlignment="Center">
											<Label.GestureRecognizers>
												<TapGestureRecognizer Tapped="OnLabelTapped"/>
											</Label.GestureRecognizers>
										</Label>
									</Grid>
								</Frame>
							</DataTemplate>
						</BindableLayout.ItemTemplate>
					</StackLayout>
				</Grid>
			</ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>