<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="NoffaPlus.Views.Queue.OperatorStatusQueueListPage"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:fontawesome="clr-namespace:NoffaPlus.Helper"
	xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
	ios:Page.UseSafeArea="True"
	BackgroundColor="#1a284f"
	NavigationPage.HasNavigationBar="False">
	<ContentPage.Content>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30" />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="80" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Label
				Grid.Row="0"
				Grid.Column="0"
				Margin="15,0,0,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="Start"
				Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ArrowLeft}"
				TextColor="White"
				VerticalTextAlignment="Center">
				<Label.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding BackCommand}" />
				</Label.GestureRecognizers>
			</Label>

			<Label
				Grid.Row="0"
				Grid.Column="2"
				Margin="0,0,10,0"
				FontFamily="{StaticResource MaterialFontFamily}"
				FontSize="25"
				HorizontalTextAlignment="End"
				Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.DotsVertical}"
				TextColor="White"
				VerticalTextAlignment="Center" />

			<ScrollView
				Grid.Row="1"
				Grid.ColumnSpan="3"
				VerticalScrollBarVisibility="Never">
				<StackLayout
					Padding="15,20,15,0"
					Spacing="0"
					VerticalOptions="StartAndExpand">
					<Label
						FontFamily="SansProRegularFontFamily"
						FontSize="15"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="{Binding SelectedOperatorQueue.DisplayCurrentDate}"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Label
						FontFamily="SansProBoldFontFamily"
						FontSize="30"
						HorizontalTextAlignment="Start"
						MaxLines="1"
						Text="{Binding SelectedOperatorQueue.QueueName}"
						TextColor="White"
						VerticalTextAlignment="Center" />

					<Grid Margin="0,20,0,0" VerticalOptions="Start">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="100" />
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<Button
							Grid.Row="0"
							Grid.Column="0"
							Padding="0"
							BackgroundColor="#253560"
							CornerRadius="50"
							FontSize="40"
							HeightRequest="100"
							HorizontalOptions="Start"
							Text="{Binding SelectedOperatorQueue.FirstLetterName}"
							TextColor="White"
							VerticalOptions="Center"
							WidthRequest="100" />

						<StackLayout
							Grid.Row="0"
							Grid.Column="1"
							HorizontalOptions="CenterAndExpand"
							Spacing="0"
							VerticalOptions="CenterAndExpand">
							<Label
								FontFamily="SansProBoldFontFamily"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{Binding PersonInLine}"
								TextColor="White" />

							<Label
								FontFamily="SansProRegularFontFamily"
								FontSize="10"
								HorizontalTextAlignment="Center"
								Text="Postion"
								TextColor="#7d8fbe" />

							<Label
								FontFamily="SansProRegularFontFamily"
								FontSize="10"
								HorizontalTextAlignment="Center"
								Text="in line"
								TextColor="#7d8fbe" />
						</StackLayout>

						<StackLayout
							Grid.Row="0"
							Grid.Column="2"
							HorizontalOptions="CenterAndExpand"
							Spacing="0"
							VerticalOptions="CenterAndExpand">
							<Label
								FontFamily="SansProBoldFontFamily"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="{Binding SelectedOperatorQueue.TotalOperators}"
								TextColor="White" />

							<Label
								FontFamily="SansProRegularFontFamily"
								FontSize="10"
								HorizontalTextAlignment="Center"
								Text="Operator"
								TextColor="#7d8fbe" />

							<Label
								FontFamily="SansProRegularFontFamily"
								FontSize="10"
								HorizontalTextAlignment="Center"
								Text="available"
								TextColor="#7d8fbe" />
						</StackLayout>

						<StackLayout
							Grid.Row="0"
							Grid.Column="3"
							HorizontalOptions="CenterAndExpand"
							Spacing="0"
							VerticalOptions="CenterAndExpand">
							<Label
								FontFamily="SansProBoldFontFamily"
								FontSize="20"
								HorizontalTextAlignment="Center"
								Text="5"
								TextColor="White" />

							<Label
								FontFamily="SansProRegularFontFamily"
								FontSize="10"
								HorizontalTextAlignment="Center"
								Text="Active"
								TextColor="#7d8fbe" />

							<Label
								FontFamily="SansProRegularFontFamily"
								FontSize="10"
								HorizontalTextAlignment="Center"
								Text="operator"
								TextColor="#7d8fbe" />
						</StackLayout>
					</Grid>

					<BoxView
						Margin="0,20,0,20"
						BackgroundColor="White"
						HeightRequest="1"
						Opacity="0.5" />

					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="25" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition />
							<ColumnDefinition />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>
						<Label
							Grid.Row="0"
							Grid.Column="0"
							FontFamily="SansProBoldFontFamily"
							FontSize="20"
							HorizontalTextAlignment="Start"
							Text="Waiting"
							TextColor="{Binding WaitingTabTextColor}"
							VerticalTextAlignment="Center">
							<Label.GestureRecognizers>
								<TapGestureRecognizer Command="{Binding TabSelectedCommand}" CommandParameter="Waiting" />
							</Label.GestureRecognizers>
						</Label>

						<Label
							Grid.Row="0"
							Grid.Column="1"
							FontFamily="SansProBoldFontFamily"
							FontSize="20"
							HorizontalTextAlignment="Center"
							Text="In service"
							TextColor="{Binding InServiceTabTextColor}"
							VerticalTextAlignment="Center">
							<Label.GestureRecognizers>
								<TapGestureRecognizer Command="{Binding TabSelectedCommand}" CommandParameter="In service" />
							</Label.GestureRecognizers>
						</Label>

						<Label
							Grid.Row="0"
							Grid.Column="2"
							FontFamily="SansProBoldFontFamily"
							FontSize="20"
							HorizontalTextAlignment="End"
							Text="Serviced"
							TextColor="{Binding ServicedTabTextColor}"
							VerticalTextAlignment="Center">
							<Label.GestureRecognizers>
								<TapGestureRecognizer Command="{Binding TabSelectedCommand}" CommandParameter="Serviced" />
							</Label.GestureRecognizers>
						</Label>

						<StackLayout
							Grid.Row="1"
							Grid.ColumnSpan="3"
							Margin="0,20,0,10"
							BindableLayout.ItemsSource="{Binding WaitingList}"
							IsVisible="{Binding IsWaiting}">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid ColumnSpacing="10" RowSpacing="10">
										<Grid.RowDefinitions>
											<RowDefinition Height="auto" />
											<RowDefinition Height="1" />
										</Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="50" />
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="40" />
										</Grid.ColumnDefinitions>
										<Grid.GestureRecognizers>
											<TapGestureRecognizer Tapped="OnWaitingListItemTapped" />
										</Grid.GestureRecognizers>
										<BoxView
											Grid.Row="0"
											Grid.Column="0"
											BackgroundColor="#253560"
											CornerRadius="25"
											HeightRequest="50"
											HorizontalOptions="Center"
											VerticalOptions="Center"
											WidthRequest="50" />

										<Label
											Grid.Row="0"
											Grid.Column="0"
											FontFamily="SansProBoldFontFamily"
											FontSize="20"
											HorizontalTextAlignment="Center"
											Text="{Binding FirstLetterName}"
											TextColor="White"
											VerticalTextAlignment="Center" />

										<StackLayout
											Grid.Row="0"
											Grid.Column="1"
											Spacing="0"
											VerticalOptions="CenterAndExpand">
											<Label
												FontFamily="SansProBoldFontFamily"
												FontSize="14"
												HorizontalTextAlignment="Start"
												Text="{Binding GuestName}"
												TextColor="White"
												VerticalTextAlignment="Center" />

											<Label
												FontFamily="SansProRegularFontFamily"
												FontSize="12"
												HorizontalTextAlignment="Start"
												TextColor="#7d8fbe"
												VerticalTextAlignment="Center">
												<Label.FormattedText>
													<FormattedString>
														<Span Text="Total person " />
														<Span Text="{Binding TotalPerson}" />
													</FormattedString>
												</Label.FormattedText>
											</Label>
										</StackLayout>

										<Label
											Grid.Row="0"
											Grid.Column="2"
											FontFamily="{StaticResource MaterialFontFamily}"
											FontSize="20"
											HorizontalTextAlignment="End"
											Opacity="0.5"
											Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronRight}"
											TextColor="#7d8fbe"
											VerticalTextAlignment="Center" />

										<BoxView
											Grid.Row="1"
											Grid.ColumnSpan="3"
											BackgroundColor="White"
											Opacity="0.5" />
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>

						<StackLayout
							Grid.Row="1"
							Grid.ColumnSpan="3"
							Margin="0,20,0,10"
							BindableLayout.ItemsSource="{Binding InserviceInfoList}"
							IsVisible="{Binding IsInService}">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid ColumnSpacing="10" RowSpacing="10">
										<Grid.RowDefinitions>
											<RowDefinition Height="auto" />
											<RowDefinition Height="1" />
										</Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="50" />
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="40" />
										</Grid.ColumnDefinitions>
										<Grid.GestureRecognizers>
											<TapGestureRecognizer Tapped="OnInServiceListItemTapped" />
										</Grid.GestureRecognizers>
										<BoxView
											Grid.Row="0"
											Grid.Column="0"
											BackgroundColor="#253560"
											CornerRadius="25"
											HeightRequest="50"
											HorizontalOptions="Center"
											Opacity="0.5"
											VerticalOptions="Center"
											WidthRequest="50" />

										<Label
											Grid.Row="0"
											Grid.Column="0"
											FontFamily="SansProBoldFontFamily"
											FontSize="20"
											HorizontalTextAlignment="Center"
											Text="{Binding FirstLetterName}"
											TextColor="White"
											VerticalTextAlignment="Center" />

										<StackLayout
											Grid.Row="0"
											Grid.Column="1"
											Spacing="0"
											VerticalOptions="CenterAndExpand">
											<Label
												FontFamily="SansProBoldFontFamily"
												FontSize="14"
												HorizontalTextAlignment="Start"
												Text="{Binding GuestName}"
												TextColor="White"
												VerticalTextAlignment="Center" />

											<Label
												FontFamily="SansProRegularFontFamily"
												FontSize="12"
												HorizontalTextAlignment="Start"
												TextColor="#7d8fbe"
												VerticalTextAlignment="Center">
												<Label.FormattedText>
													<FormattedString>
														<Span Text="Total person " />
														<Span Text="{Binding TotalPerson}" />
													</FormattedString>
												</Label.FormattedText>
											</Label>
										</StackLayout>

										<Label
											Grid.Row="0"
											Grid.Column="2"
											FontFamily="{StaticResource MaterialFontFamily}"
											FontSize="20"
											HorizontalTextAlignment="End"
											Opacity="0.5"
											Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronRight}"
											TextColor="#7d8fbe"
											VerticalTextAlignment="Center" />

										<BoxView
											Grid.Row="1"
											Grid.ColumnSpan="3"
											BackgroundColor="White"
											Opacity="0.5" />
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>

						<StackLayout
							Grid.Row="1"
							Grid.ColumnSpan="3"
							Margin="0,20,0,10"
							BindableLayout.ItemsSource="{Binding ServicedInfoList}"
							IsVisible="{Binding IsServiced}">
							<BindableLayout.ItemTemplate>
								<DataTemplate>
									<Grid ColumnSpacing="10" RowSpacing="10">
										<Grid.RowDefinitions>
											<RowDefinition Height="auto" />
											<RowDefinition Height="1" />
										</Grid.RowDefinitions>
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="50" />
											<ColumnDefinition Width="*" />
											<ColumnDefinition Width="40" />
										</Grid.ColumnDefinitions>

										<BoxView
											Grid.Row="0"
											Grid.Column="0"
											BackgroundColor="#253560"
											CornerRadius="25"
											HeightRequest="50"
											HorizontalOptions="Center"
											Opacity="0.5"
											VerticalOptions="Center"
											WidthRequest="50" />

										<Label
											Grid.Row="0"
											Grid.Column="0"
											FontFamily="SansProBoldFontFamily"
											FontSize="20"
											HorizontalTextAlignment="Center"
											Text="{Binding FirstLetterName}"
											TextColor="White"
											VerticalTextAlignment="Center" />

										<StackLayout
											Grid.Row="0"
											Grid.Column="1"
											Spacing="0"
											VerticalOptions="CenterAndExpand">
											<Label
												FontFamily="SansProBoldFontFamily"
												FontSize="14"
												HorizontalTextAlignment="Start"
												Text="{Binding GuestName}"
												TextColor="White"
												VerticalTextAlignment="Center" />

											<Label
												FontFamily="SansProRegularFontFamily"
												FontSize="12"
												HorizontalTextAlignment="Start"
												TextColor="#7d8fbe"
												VerticalTextAlignment="Center">
												<Label.FormattedText>
													<FormattedString>
														<Span Text="Total person " />
														<Span Text="{Binding TotalPerson}" />
													</FormattedString>
												</Label.FormattedText>
											</Label>
										</StackLayout>

										<Label
											Grid.Row="0"
											Grid.Column="2"
											FontFamily="{StaticResource MaterialFontFamily}"
											FontSize="20"
											HorizontalTextAlignment="End"
											Opacity="0.5"
											Text="{x:Static fontawesome:NoffaPlusAppFlatIcons.ChevronRight}"
											TextColor="#7d8fbe"
											VerticalTextAlignment="Center" />

										<BoxView
											Grid.Row="1"
											Grid.ColumnSpan="3"
											BackgroundColor="White"
											Opacity="0.5" />
									</Grid>
								</DataTemplate>
							</BindableLayout.ItemTemplate>
						</StackLayout>
					</Grid>

				</StackLayout>
			</ScrollView>
		</Grid>
	</ContentPage.Content>
</ContentPage>